<h1> Words </h1>

<table>
  <thead>
  <tr>
    <th>Word</th>
    <th>Definition</th>
    <th>Lookup Date</th>
    <th>Lookup Frequency</th>
  </tr>
  </thead>

  <tbody>
  <% @words.each do |word| %>
    <tr>
      <td><%= word.word %></td>
      <td><%= word.definition %></td>
      <td><%= word.created_at.strftime("%m/%d/%Y") %></td>
      <td><%= word.counter %></td>
    </tr>
  <% end %>
  </tbody>
</table>